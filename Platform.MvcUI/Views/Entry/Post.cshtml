<form id="post-form" class="form-horizontal">
    <input type="text" hidden value="@Session["PersonID"]" name="PersonID" />
    <h4>What's New</h4>
    <div class="form-group" style="padding:14px; margin-bottom: 0">
        <input class="form-control" placeholder="Başlık" name="EntryTitle" required>
    </div>
    <div class="form-group" style="padding:14px;">
        <textarea class="form-control" placeholder="Metniniz" name="EntryArticle" required></textarea>
    </div>
    <button type="button" class="btn btn-primary pull-right" onclick="EntryPost()" style="width:48%">Post</button>
    <select id="tag-select-list" class="form-control" style="width: 48%" aria-label="Default select example" name="TagID" required>
      <!--jquery-->  
    </select>
</form>