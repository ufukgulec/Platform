<!DOCTYPE html>
<html lang="tr">
<head>
    <!-- Required meta tags -->
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--Font-->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400;500;700&display=swap" rel="stylesheet">
    <!-- ===== BOOTSTRAP ===== -->
    <link href="~/Content/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- ===== MAİN CSS ===== -->
    <link href="~/Content/assets/css/main.css" rel="stylesheet" />
    <!-- ===== BOX ICONS ===== -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>

</head>
<body>
    <!-- Navbar Begin -->
    <!-- TopNavbar Begin -->
    <div class="topnav">
        <a href="#home" class="active">
            <i class='bx bxs-book-reader bx-sm'></i>
        </a>
        <div id="myLinks">
            <a href="#">Tags</a>
            <a href="#">Entries</a>
            <a href="#">Users</a>
        </div>
        <a href="javascript:void(0);" class="icon" onclick="topnavbaropen()">
            <i id="menu-switcher" class='bx bx-right-arrow bx-sm'></i>
        </a>
        <a href="#" class="user-icon">
            <i class='bx bxs-user-circle bx-sm'></i>
        </a>
    </div>
    <!-- TopNavbar End -->
    <!-- Bottom iconbar Begin -->
    <nav id="bottom-iconbar" class="navbar fixed-bottom navbar-expand-sm">
        <div id="icon-bar" class="container-fluid icon-bar">
            <a href="/"><i class='bx bxs-home'></i></a>
            <a href="/Tag/Index"><i class='bx bxs-tag-alt'></i></a>
            <a href="#" data-bs-toggle="modal" data-bs-target="#PostModal" data-bs-whatever="@@mdo"><i id="post-icon" class='bx bxs-plus-circle'></i></a>
            <a href="/Entry/Index"><i class='bx bxs-comment-detail'></i></a>
            <a href="javascript:void(0);" onclick="darkmode()"><i id="theme" class='bx bxs-moon'></i></a>
        </div>
    </nav>
    <!-- Bottom iconbar End-->
    <!-- Navbar End -->
    <!-- Page Begin -->
    <div class="container">
        <div class="row pt-3 pb-5">
            @RenderBody()
        </div>
    </div>
    <!-- Page End -->
    <!-- Modal Begin -->
    <div class="modal fade" id="PostModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">New Entry</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="modal-post-form" method="post">
                        <input name="PersonID" hidden value="@Session["PersonID"]" />
                        <div id="tag-select-list-modal">
                            <!--Jquery-->
                        </div>
                        <div class="mb-3">
                            <label for="entry-title" class="col-form-label">Entry Title:</label>
                            <input name="EntryTitle" type="text" class="form-control" id="entry-title">
                        </div>
                        <div class="mb-3">
                            <label for="entry-article" class="col-form-label">Entry Article:</label>
                            <textarea name="EntryArticle" class="form-control" id="entry-article"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" onclick="ModalEntryPost()" class="btn btn-primary">Post</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal End -->
    <!--Main js-->
    <script src="~/Content/assets/js/site.js"></script>
    <!-- Optional JavaScript; choose one of the two! -->
    <script src="~/Content/assets/js/jquery.js"></script>
    <!--MyScript-->
    <script src="~/Scripts/MyScript.js"></script>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="~/Content/assets/js/bootstrap.bundle.js"></script>

</body>
</html>